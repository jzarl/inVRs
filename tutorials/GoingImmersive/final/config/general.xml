		<path name="EntityTypeConfiguration" directory="final/config/systemcore/worlddatabase/entity/"/>
		<path name="TileConfiguration" directory="final/config/systemcore/worlddatabase/tile/"/>

		<!-- Paths for User DB Datastructure-->
		<path name="UserConfiguration" directory="final/config/systemcore/userdatabase/"/>
		<path name="AvatarConfiguration" directory="final/config/systemcore/userdatabase/avatar/"/>
		<path name="CursorRepresentationConfiguration" directory="final/config/systemcore/userdatabase/cursorrepresentation/"/>
