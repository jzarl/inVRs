		<path name="ModulesConfiguration" directory="final/config/modules/"/>
		<path name="InputInterfaceConfiguration" directory="final/config/inputinterface"/>
		<path name="OutputInterfaceConfiguration" directory="final/config/outputinterface"/>

<!-- ************************ Snippet-1-2 - BEGIN ************************** -->
