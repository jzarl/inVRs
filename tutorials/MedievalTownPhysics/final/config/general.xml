<?xml version="1.0"?>
<config>
	<!-- This is the configuration for the inVRs Framework -->
	<general>

		<Interfaces>
			<option key="inputInterfaceConfiguration" value="inputinterface_desktop.xml" />
		</Interfaces>
		<Modules>
			<option key="modulesConfiguration" value="modules_desktop_server.xml" />
		</Modules>
		<Interfaces>
			<option key="outputInterfaceConfiguration" value="outputinterface.xml" />
		</Interfaces>

		<SystemCore>
			<option key="systemCoreConfiguration" value="systemCore.xml" />
		</SystemCore>
		
		<ApplicationBase>
      <option key="debugLevel" value="error" />
      <option key="useLogFile" value="server.log" />
		</ApplicationBase>
				
		<OpenSGApplicationBase>
      <option key="useCSM" value="true"/>
      <option key="csmConfigFile" value="mono.csm"/>
    </OpenSGApplicationBase>
	</general>

	<paths>
		<root path="./" />
		<path name="SystemCoreConfiguration" path="final/config/systemcore/" />

    <path name="CsmConfigFile" path="final/config/" />

    <path name="Plugins" path="" />
		<path name="ModulesConfiguration" path="final/config/modules/" />
		<path name="InputInterfaceConfiguration" path="final/config/inputinterface/" />
		<path name="OutputInterfaceConfiguration" path="final/config/outputinterface/" />

    <path name="CAVESceneManagerConfiguration"
				path="final/config/outputinterface/cavescenemanager"/>

    <!-- Paths for World DB Datastructure-->
		<path name="WorldConfiguration" 
			path="final/config/systemcore/worlddatabase/" />
		<path name="EnvironmentConfiguration" 
			path="final/config/systemcore/worlddatabase/environment/" />
		<path name="EntityConfiguration" 
			path="final/config/systemcore/worlddatabase/entity/" />
		<path name="TileConfiguration" 
			path="final/config/systemcore/worlddatabase/tile/" />
			
		<!-- Paths for User DB Datastructure-->
		<path name="UserConfiguration" path="final/config/systemcore/userdatabase/" />
		<path name="AvatarConfiguration" 
			path="final/config/systemcore/userdatabase/avatar/" />

		<path name="CursorRepresentationConfiguration" 
			path="final/config/systemcore/userdatabase/cursorRepresentation/" />
		<path name="CursorModelConfiguration" 
			path="final/config/systemcore/userdatabase/cursorModel/" />
		
		<!-- Path for TransformationManager -->
		<path name="TransformationManagerConfiguration" 
			path="final/config/systemcore/transformationmanager/" />
				
		<!-- Path for Interfaces Datastructure -->
		<path name="ControllerConfiguration" 
			path="final/config/inputinterface/controllermanager/" />
		
		<!-- Paths for Module Datastructure -->		
		<path name="NavigationConfiguration" path="final/config/modules/navigation/" />

		<path name="InteractionModuleConfiguration" 
			path="final/config/modules/interaction/" />
		
		<path name="NetworkConfiguration" path="final/config/modules/network/" />
			
		<path name="PhysicsConfiguration" path="final/config/modules/physics/" />
		
		<!-- Paths for Models-->
		<path name="Models" path="models/" />
		<path name="Tiles" path="models/tiles/" />
		<path name="Entities" path="models/entities/" />
		<path name="Skybox" path="models/skybox/" />
		<path name="Highlighters" path="models/highlighters/" />		
		<path name="Avatars" path="models/avatars/" />
		<path name="HeightMaps" path="models/heightmaps/" />
		<path name="CollisionMaps" path="models/collisionmaps/" />
		<path name="Cursors" path="models/entities/" />
	</paths>
</config>
