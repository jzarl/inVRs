		<path name="NavigationModuleConfiguration" directory="config/modules/navigation/" />
		<path name="InteractionModuleConfiguration" directory="config/modules/interaction/" />
		<path name="DeformationConfiguration" directory="config/modules/deformation/"/>
		
		<path name="Models" directory="models/"/>
		<path name="Tiles" directory="models/tiles/"/>
		<path name="Entities" directory="models/entities/"/>
		<path name="Highlighters" directory="models/highlighters/"/>
